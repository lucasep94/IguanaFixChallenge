<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DetalleContactFragment_rootView"
    android:background="@color/colorBackgroudLight"
    tools:context="com.lucasperez.iguanafixchallenge.Views.Fragments.DetalleContactFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/DetalleContactFragment_ivFoto"
                    android:src="@drawable/placeholder"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/DetalleContactFragment_tvFullName"
                    android:layout_alignBottom="@id/DetalleContactFragment_ivFoto"
                    android:paddingLeft="5dp"
                    android:textSize="28dp"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/gradient_background"/>
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                android:layout_margin="4dp"
                app:cardPreventCornerOverlap="true"
                android:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/DetalleContactFragment_iconBirthDate"
                            android:src="@drawable/ic_date"
                            android:layout_margin="5dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/DetalleContactFragment_iconCreatedDate"
                            android:layout_below="@id/DetalleContactFragment_iconBirthDate"
                            android:src="@drawable/ic_date"
                            android:layout_margin="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/DetalleContactFragment_titleBirthDate"
                            android:text="@string/detail_title_birthdate"
                            android:layout_toRightOf="@id/DetalleContactFragment_iconBirthDate"
                            android:layout_margin="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/DetalleContactFragment_titleCreatedDate"
                            android:layout_toRightOf="@id/DetalleContactFragment_iconCreatedDate"
                            android:layout_below="@id/DetalleContactFragment_iconBirthDate"
                            android:text="@string/detail_title_createdat"
                            android:layout_margin="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/DetalleContactFragment_tvBirthDate"
                            android:layout_toRightOf="@id/DetalleContactFragment_titleBirthDate"
                            android:layout_alignBaseline="@id/DetalleContactFragment_titleBirthDate"
                            android:layout_margin="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/DetalleContactFragment_tvCreatedAt"
                            android:layout_below="@+id/DetalleContactFragment_tvBirthDate"
                            android:layout_toRightOf="@+id/DetalleContactFragment_titleCreatedDate"
                            android:layout_alignBaseline="@+id/DetalleContactFragment_titleCreatedDate"
                            android:layout_margin="5dp"/>

                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                app:cardPreventCornerOverlap="true"
                android:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/DetalleContactFragment_LinearContent">
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
